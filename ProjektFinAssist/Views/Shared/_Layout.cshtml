<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]FinAssist</title>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <link rel="icon" href="Finassist.png" type="image/png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_FinAssist.styles.css" asp-append-version="true" />
    <style>

        body {
            font-family: 'Bebas Neue', sans-serif;
            background-color: white;
            color: black;
        }

        .navbar, .navbar-light {
            background-color: white !important;
            border-bottom: 1px solid #ccc;
        }

        .navbar-nav .nav-item .nav-link {
            color: black !important;
        }

        .navbar-brand {
            color: black !important;
        }

        .navbar-toggler {
            background-color: black;
        }

        .footer {
            background-color: #f8f9fa;
            color: black;
            padding: 20px 0;
        }

            .footer a {
                color: black;
            }

                .footer a:hover {
                    color: #007bff;
                }

        .section-title {
            font-size: 1.5rem;
            color: black;
        }

        .section-content {
            font-size: 1rem;
            color: black;
            line-height: 1.6;
        }

        .jumbotron {
            background-color: white;
            color: black;
        }

        .container {
            padding-top: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src=~/Finassist.png width="100" height="100"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OperationsModels" asp-action="UserPanel">User's Panel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OperationsModels" asp-action="Index">Manage operations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OperationsModels" asp-action="History">History of operations</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FinAssist - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
